# ============================================
# FINCA AI - Environment Configuration Example
# ============================================
# Copy this file to .env and fill in your actual values

# App Configuration
APP_NAME=FinCA_AI
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO
SECRET_KEY=your_secret_key_here_generate_with_python_secrets

# Supabase (PostgreSQL + Auth) - Get from https://supabase.com
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_key_here
SUPABASE_JWT_SECRET=your_jwt_secret_here

# Database (Optional - Direct PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/finca_ai

# Redis (Optional - Cache + Celery Broker)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================
# AI PROVIDERS (Choose at least one)
# ============================================

# Groq (RECOMMENDED - FREE & ULTRA FAST) - Get from https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here
USE_GROQ=true

# DeepSeek (FREE - UNLIMITED) - Get from https://platform.deepseek.com
DEEPSEEK_API_KEY=your_deepseek_api_key_here
USE_DEEPSEEK=true

# OpenAI (OPTIONAL - PAID) - Get from https://platform.openai.com
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ============================================
# OPTIONAL SERVICES
# ============================================

# LangSmith (Agent Monitoring) - Get from https://smith.langchain.com
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=finca-ai-prod

# Account Aggregator (Setu) - Get from https://setu.co
AA_CLIENT_ID=your_setu_client_id
AA_CLIENT_SECRET=your_setu_client_secret
AA_BASE_URL=https://sandbox.setu.co
AA_REDIRECT_URL=http://localhost:5000/aa/callback

# News API - Get from https://newsapi.org
NEWS_API_KEY=your_news_api_key_here
NEWS_API_BASE=https://newsapi.org/v2
NEWS_FETCH_INTERVAL=3600

# Voice Services (Local Whisper - FREE)
ENABLE_VOICE=True
WHISPER_MODEL=base
WHISPER_USE_LOCAL=True

# Monitoring & Error Tracking (Sentry) - Get from https://sentry.io
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_SEND_DEFAULT_PII=True
SENTRY_TOKEN=your_sentry_token_here

# Prometheus (Optional)
PROMETHEUS_PORT=9090

# Security
ENCRYPTION_KEY=generate_with_cryptography_fernet_key
JWT_EXPIRY_MINUTES=1440
CORS_ORIGINS=http://localhost:5000,http://localhost:3000

# Feature Flags
ENABLE_GAMIFICATION=True
ENABLE_PEER_COMPARISON=True
ENABLE_VOICE_ASSISTANT=True
ENABLE_ACCOUNT_AGGREGATOR=False
ENABLE_RAG=True

# Rate Limiting
API_RATE_LIMIT=100
LLM_RATE_LIMIT=20

# Compliance
DATA_RETENTION_DAYS=730
GDPR_ENABLED=True
AUDIT_LOG_ENABLED=True

# Stock Market API (AlphaVantage) - Get from https://www.alphavantage.co
ALPHAVANTAGE_API_KEY=your_alphavantage_key_here
ALPHAVANTAGE_BASE_URL=https://www.alphavantage.co/query

# ============================================
# QUICK SETUP GUIDE
# ============================================
# 
# 1. REQUIRED (Minimum to run):
#    - SECRET_KEY (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
#    - SUPABASE_URL, SUPABASE_ANON_KEY, SUPABASE_SERVICE_KEY, SUPABASE_JWT_SECRET
#    - GROQ_API_KEY or DEEPSEEK_API_KEY (at least one)
#
# 2. RECOMMENDED:
#    - ENCRYPTION_KEY (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
#
# 3. OPTIONAL:
#    - All other services are optional and can be added later
#
# ============================================
